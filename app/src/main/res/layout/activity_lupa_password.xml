<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LupaPassword"
    android:background="@drawable/bggradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-150dp"
        tools:layout_editor_absoluteY="16dp">


        <Button
            android:id="@+id/btnLupaPass"
            android:layout_width="260dp"
            android:layout_height="38dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btncolor"
            android:text="Reset Password"
            android:textColor="@color/colorHint"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Lupa_pin" />

        <EditText
            android:id="@+id/Lupa_email"
            android:layout_width="260dp"
            android:layout_height="38dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/roundedcorner"
            android:gravity="center"
            android:hint="SIPetani@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColorHint="@color/colorHint"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ket2" />

        <TextView
            android:id="@+id/ket1"
            android:layout_width="309dp"
            android:layout_height="19dp"
            android:layout_marginTop="8dp"
            android:text="Masukkan Email dan PIN terahir Anda dan klik"
            android:textColor="@color/colorHint"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lupaPass" />

        <TextView
            android:id="@+id/akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Buat Akun Baru!"
            android:textColor="@color/endColor"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.713" />


        <TextView
            android:id="@+id/punyaAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Sudah Memiliki Akun? Login!"
            android:textColor="@color/endColor"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.751" />

        <EditText
            android:id="@+id/Lupa_pin"
            android:layout_width="260dp"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundedcorner"
            android:gravity="center"
            android:hint="Pin"
            android:inputType="text"
            android:padding="10dp"
            android:textColorHint="@color/colorHint"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Lupa_email" />

        <TextView
            android:id="@+id/lupaPass"
            android:layout_width="212dp"
            android:layout_height="41dp"
            android:layout_marginTop="88dp"
            android:text="Lupa Password Anda?"
            android:textColor="@color/colorWhite"
            android:textSize="21dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ket2"
            android:layout_width="311dp"
            android:layout_height="0dp"
            android:text="Reset Password untuk mereset Password Anda"
            android:textColor="@color/colorHint"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ket1" />

        <TextView
            android:id="@+id/error_message"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:background="@drawable/roundedcornerwarning"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:text="Pesan Error"
            android:textSize="15dp"
            android:visibility="invisible"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/Lupa_email"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>