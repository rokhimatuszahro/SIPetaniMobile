<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/hijaugradient">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:src="@drawable/beranda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBeranda"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="184dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pemesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Pesan Tiket Anda disini!"
                android:textColor="@color/colorBlack"
                android:textSize="21dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/tglBerkunjung"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/roundedcorner"
                android:gravity="center"
                android:hint="Masukkan Tanggal Berkunjung"
                android:inputType="datetime"
                android:textColorHint="@color/colorHint"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pemesanan" />

            <EditText
                android:id="@+id/jumTiket"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundedcorner"
                android:gravity="center"
                android:hint="Masukkan Jumlah Tiket"
                android:inputType="text"
                android:textColorHint="@color/colorHint"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tglBerkunjung" />

            <Button
                android:id="@+id/btnpesan"
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btncolor"
                android:text="Pesan Sekarang"
                android:textColor="@color/colorHint"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/jumTiket" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>